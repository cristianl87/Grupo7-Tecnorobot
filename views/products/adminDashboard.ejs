<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/admin/head.ejs') %>
        <body>
            <%- include('../partials/admin/header.ejs') %>
                <main class="main-contenedor">
                    <%- include('../partials/admin/sidebar.ejs') %>
                        <section class="contenedor-botones">
                            <a href="/products/create" class="btn btn-primary">
                                <i class="fas fa-plus-circle"></i> Agregar Producto
                            </a>
                        </section>
                        <table class="productTable listadoProductos">
                            <thead>
                                <tr>
                                    <th>Imagen</th>
                                    <th>SKU</th>
                                    <th>Nombre</th>
                                    <th>Categor√≠a</th>
                                    <th>Precio</th>
                                    <th>Publicado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                <% for(let producto of listadoProductos) { %>
                                    <tr>
                                        <td><img id="imagen" width="50px" src=<%= producto.image %>></td>
                                        <td><%= producto.id %></td>
                                        <td><%= producto.name %></td>
                                        <td><%= producto.category %></td>
                                        <td><%= producto.currency %> <%= producto.price %></td>
                                        <td> <% if(producto.published === true) { %>
                                            <i class="fas fa-check enStock"></i>
                                        <% }else { %>
                                            <i class="fas fa-times sinStock"></i>
                                        <% } %></td>
                                        <td class="acciones">
                                            <a href="/products/edit/<%= producto.id %>" id="editar" class="editar-producto bntDashboard1"> <i class="fas fa-pen"> </i> </a>
                                            
                                        <form action="/products/delete/<%= producto.id %>?_method=DELETE" method="POST">
                                            <button type="submit" class="eliminar-producto bntDashboard1 btn-danger"><i class="far fa-trash-alt"></i></button> 
                                        </form>
                                        
                                        </td>                        
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>

                        <section class="gridProductos contenedor listadoProductos">
                            <% for(let producto of listadoProductos) { %>
                                <article class="producto-admin">
                                    <img id="imagen" src=<%= producto.imagen %>>
                                    <div class="info-producto-admin">
                                        <div class="titulo-producto-admin" id="nombre"><%= producto.nombre %></div>
                                        <div class="precio-producto-admin" id="precio"> $ <%= producto.precio %></div>
                                        <div class="sku-producto-admin" id="id"> SKU: <%= producto.id %> </div>
                                        <div class="stock-producto-admin">Stock:
                                            <% if(producto.disponible === true) { %>
                                                <i class="fas fa-long-arrow-alt-up enStock"></i>
                                            <% }else { %>
                                                <i class="fas fa-long-arrow-alt-down sinStock"></i>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="iconos-acciones">
                                        <a href="#exampleModalCenter" id="editar" class="editar-producto bntDashboard1" data-toggle="modal" data-id="<%= producto.id %>" data-nombre="<%= producto.nombre %>" data-precio="<%= producto.precio %>" data-imagen="<%= producto.imagen %>" data-categoria="<%= producto.categoria %>" > <i class="fas fa-pen"> </i> </a>

                                        <a href="#/<%= producto.id %>" class="eliminar-producto bntDashboard1 btn-danger"><i class="far fa-trash-alt"></i></a>
                                    </div>
                                </article>
                            <% } %>
                        </section>

                <!-- Modal -->
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content modal-tecno">
                            <div class="modal-header">
                            <h5 class="modal-title" id="modalTitle"></h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            </div>
                            <div class="modal-body">
                                <form action="" class="form-modal-edit">
                                    <div>
                                        <label for="nombre">Nombre</label>
                                        <input type="text" name="nombre" id="nombre-modal">
                                    </div>

                                    <div>
                                        <label for="precio">Precio</label>
                                        <input type="number" name="precio" id="precio-modal">
                                    </div>

                                    <div>
                                        <label for="categoria">Categoria</label>
                                        <input type="text" name="categoria" id="categoria-modal">
                                    </div>

                                    <div>
                                        <label for="disponible">Stock</label>
                                        <select name="disponible" id="disponible">
                                            <option value="">-- Seleccione --</option>
                                            <option value="1">Disponible</option>
                                            <option value="0">No Disponible</option>
                                        </select>
                                    </div>
                                    
                                    <div>
                                        <img id="imagen-modal" src="" width="150px">
                                        <input type="file" name="imagen">
                                    </div>

                                </form>
                            </div>
                            <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn btn-primary">Guardar</button>
                            </div>
                        </div>
                    </div>
                </div>
                </main>
            <%- include('../partials/addProduct.ejs') %>
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

            <script type="text/javascript">

                const mobileMenu = document.querySelector('.mobile');
                mobileMenu.addEventListener('click', mostrarMenu);

                const barraLateral = document.querySelector('.barra-lateral');

                function mostrarMenu() {
                    mobileMenu.classList.toggle('active');
                    barraLateral.classList.toggle('mostrarMenu');
                }



                const productTable = document.querySelector('.productTable')
                productTable.addEventListener('click', leerProductos);

                const gridProductos = document.querySelector('.gridProductos')
                gridProductos.addEventListener('click', leerProductos);


                function leerProductos(e){
                    if(e.target.classList.contains('editar-producto')) {
                        productoId = e.target.getAttribute('data-id');
                        productoNombre = e.target.getAttribute('data-nombre');
                        productoPrecio = e.target.getAttribute('data-precio');
                        productoCategoria = e.target.getAttribute('data-categoria');
                        productoImagen = e.target.getAttribute('data-imagen');

                        modalTitle = document.querySelector('#modalTitle');
                        modalTitle.textContent = 'Editar producto #' + productoId;

                        nombreModal = document.querySelector('#nombre-modal');
                        nombreModal.value = productoNombre;

                        precioModal = document.querySelector('#precio-modal');
                        precioModal.value = productoPrecio;

                        categoriaModal = document.querySelector('#categoria-modal');
                        categoriaModal.value = productoCategoria;

                        imagenModal = document.querySelector('#imagen-modal');
                        imagenModal.src = productoImagen;

                    }
                }
            </script>
        </body>
</html>